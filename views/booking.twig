{% extends "layout.twig" %}
{% block content %}
  <h1 class="text-center">Bookings en Denomades</h1><br>
  <a href="{{ '' | url }}">Realiza una reserva</a>
  {% if message %}
    <div class="alert alert-success text-center">
      <p>Reserva realizada con exito!</p>
    </div>
  {% endif %}
  {% if errors %}
    <div class="alert alert-danger">
      <ul>
        {% for input, messages in errors %}
          {% for message in messages %}
            <li>{{ input }}: {{ message }}</li>
          {% endfor %}
        {% endfor %}
      </ul>
    </div>
  {% else %}
  <table class="table table-striped mt-3">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Actividad</th>
        <th scope="col">Cantidad de personas</th>
        <th scope="col">Precio por persona</th>
        <th scope="col">Total</th>
      </tr>
    </thead>
    <tbody>
      {% for booking in bookings %}
        <tr>
          <th scope="row">{{ booking.id }}</th>
          <td>{{ booking.activity_id }}</td>
          <td>{{ booking.people_number }}</td>
          <td>{{ booking.total_price / booking.people_number }}</td>
          <td>{{ booking.total_price }}</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
  {% endif %}
{% endblock %}